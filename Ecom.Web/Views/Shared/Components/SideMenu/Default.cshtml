@using Ecom.Web.Shared.Models.Views.Layouts
@model List<MenuItem>

<div class="list-group list-group-flush px-2 mt-3">
    @foreach (var item in Model)
    {
        <a href="/@item.Controller/@item.Action" class="list-group-item list-group-item-action d-flex align-items-center">
            <i class="bi @item.Icon me-3"></i><span>@item.Title</span>
        </a>
    }
</div>