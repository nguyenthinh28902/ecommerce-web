@using Ecom.Web.Shared.Models.AuthWeb
@using System.Security.Claims
@using Ecom.Web.Shared.Models.Custom
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce CMS</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link asp-append-version="true" rel="icon" type="image/x-icon" href="https://zhlneinpjgzpjbpozskh.supabase.co/storage/v1/object/public/ecommerce-web-image-product/ecommerce-web-%20gemini-gpt-logo.png">

    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>

    <style>
        :root {
            --dotnet-purple: #512bd4;
            --sidebar-width: 250px;
        }

        body, html {
            height: 100%;
            margin: 0;
        }

        #wrapper {
            display: flex;
            width: 100%;
            min-height: 100vh;
        }

        /* Sidebar tím phủ full chiều dọc */
        #sidebar-wrapper {
            background-color: var(--dotnet-purple);
            width: var(--sidebar-width);
            min-height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }

        /* Vùng nội dung đẩy Footer xuống cuối */
        #page-content-wrapper {
            flex: 1;
            margin-left: var(--sidebar-width);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #f8f9fa;
        }

        .sidebar-heading {
            padding: 1.5rem 1rem;
            font-size: 1.2rem;
            color: white;
            font-weight: bold;
            text-align: center;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .list-group-item {
            background: transparent !important;
            border: none !important;
            color: rgba(255,255,255,0.8) !important;
            padding: 0.8rem 1.25rem;
            margin: 0.2rem 0.6rem;
            border-radius: 8px !important;
        }

            .list-group-item.active {
                background: rgba(255,255,255,0.2) !important;
                color: white !important;
                font-weight: 600;
            }

        .navbar {
            background: white !important;
            border-bottom: 1px solid #e0e0e0 !important;
        }

        /* Footer cố định ở đáy vùng nội dung */
        .main-footer {
            background: white;
            border-top: 1px solid #dee2e6;
            padding: 1rem 1.5rem;
            margin-top: auto; /* Đẩy xuống đáy */
            color: #6c757d;
        }

        #wrapper.toggled #sidebar-wrapper {
            margin-left: calc(var(--sidebar-width) * -1);
        }

        #wrapper.toggled #page-content-wrapper {
            margin-left: 0;
        }
    </style>
</head>
<body>
    <div id="wrapper">
        <div id="sidebar-wrapper">
            <div class="sidebar-heading">
                <i class="bi bi-cart4 me-2"></i>E-COM
            </div>
            @await Component.InvokeAsync("SideMenu")
        </div>

        <div id="page-content-wrapper">
            <nav class="navbar navbar-expand-lg sticky-top shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-light border" id="menu-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="ms-auto d-flex align-items-center">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle text-dark" data-bs-toggle="dropdown">
                                <img src="@User.FindFirst("Avatar")?.Value" alt="Avatar" width="32" height="32" class="rounded-circle me-2 bg-secondary border">
                                <div class="me-2 text-end d-none d-md-block">
                                    <div class="fw-bold small">@User.FindFirst(ClaimTypes.Name)?.Value</div>
                                    <div class="text-muted" style="font-size: 0.7rem;">@User.FindFirst(ClaimCustomTypes.DepartmentName.ToString())?.Value</div>
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow border-0 p-2 mt-2 rounded-3">
                                <li><a class="dropdown-item py-2" href="/Profile"><i class="bi bi-person me-2"></i>Hồ sơ</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="SignIn" asp-action="Logout" method="post" id="logoutForm" class="m-0">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="dropdown-item text-danger py-2 d-flex align-items-center w-100 border-0 bg-transparent">
                                            <i class="bi bi-box-arrow-right me-2"></i><span>Đăng xuất</span>
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                @RenderBody()
            </div>

            <footer class="main-footer">
                <div class="container-fluid">
                    <div class="d-flex justify-content-between align-items-center small">
                        <div>&copy; 2026 - <strong>E-Commerce CMS</strong></div>
                        <div>
                            <span class="me-3 text-muted">Version 1.0.2</span>
                            <a href="#" class="text-dotnet-purple text-decoration-none">Support System</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });

        $(document).ready(function () {
            const currentPath = window.location.pathname;
            $('.list-group-item').each(function () {
                if ($(this).attr('href') === currentPath) {
                    $(this).addClass('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>