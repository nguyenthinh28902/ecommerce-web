@{
    ViewData["Title"] = "Trang chủ";
}

<section class="bg-white pt-16 pb-8 text-center">
    <div class="max-w-4xl mx-auto px-6">
        <h2 class="text-xs font-bold text-orange-600 mb-2 uppercase tracking-widest">Mới</h2>
        <h1 class="text-6xl font-bold tracking-tight mb-4">MacBook Air M4</h1>
        <p class="text-2xl font-light text-gray-600 mb-8">Siêu mỏng. Siêu mạnh. Siêu AI.</p>
        <div class="flex justify-center gap-6 mb-12">
            <button class="bg-[#0071e3] text-white px-8 py-2.5 rounded-full font-medium hover:bg-[#0077ed]">Mua</button>
            <button class="text-[#0071e3] font-medium hover:underline">Tìm hiểu thêm ></button>
        </div>

        <div class="w-full aspect-video bg-gradient-to-tr from-gray-100 to-gray-200 rounded-t-3xl shadow-2xl border-x border-t border-gray-300 mx-auto">
            <div class="flex h-full items-center justify-center text-gray-400 italic">4K Cinematic Product Shot</div>
        </div>
    </div>
</section>

<section class="max-w-[1200px] mx-auto grid grid-cols-1 md:grid-cols-2 gap-6 p-6 mt-6">
    @for (int i = 1; i <= 4; i++)
    {
        <div class="bg-white rounded-[2rem] p-12 flex flex-col items-center text-center shadow-sm hover:shadow-md transition-shadow cursor-pointer">
            <h3 class="text-4xl font-semibold mb-2">Sản phẩm @i</h3>
            <p class="text-xl font-light mb-6">Mô tả ngắn gọn sức mạnh sản phẩm.</p>

            @* Khung màu giả lập ảnh sản phẩm (iPhone/Watch) *@
            <div class="w-64 h-64 bg-gray-100 rounded-2xl mb-8 flex items-center justify-center overflow-hidden">
                <div class="w-1/2 h-full bg-gray-200 rotate-12 transform translate-y-10 shadow-lg"></div>
            </div>

            <div class="flex gap-4">
                <button class="bg-[#0071e3] text-white px-5 py-2 rounded-full text-sm">Mua</button>
                <a href="#" class="text-[#0071e3] py-2 text-sm hover:underline">Tìm hiểu thêm ></a>
            </div>
        </div>
    }
</section>

